---
const { title, subtitle } = Astro.props;
interface Props {
  title: string;
  subtitle?: string;
  class?: string;
}
---

<article
  class=`

${Astro.props.class}
relative rounded-4xl backdrop-blur-md shadow-inner
shadow-white/10 border border-white/80 overflow-hidden
`
>
  <slot name="image" />

  <div class="flex flex-col gap-3">
    <h2 class="text-4xl font-lobster">{title}</h2>
    {subtitle && <h3 class="text-2xl text-slate-500">{subtitle}</h3>}
  </div>

  <slot />
</article>

<style>
  h2,
  h3 {
    font-family: "Lobster", sans-serif;
    text-align: center;
  }
  p{
    font-size: 12px;
    color:rgb(136, 136, 106)!important;
  }
</style>
